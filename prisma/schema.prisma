generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(uuid())
  first_name  String
  last_name   String
  picture     String?
  gmail       String
  phone       String?
  // password    String
  employee_id String?
  join_date   DateTime?
  blood_group String?
  auth        Auth?
  role        Role[]
}

model Auth {
  id            String  @id @default(uuid())
  refresh_token String?
  access_token  String?
  user_id       String  @unique
  user          User?   @relation(fields: [user_id], references: [id])
}

model Team {
  id String @id @default(uuid())
}

model Role {
  id      String @id @default(uuid())
  name    String
  user_id String
  user    User?  @relation(fields: [user_id], references: [id])
}
